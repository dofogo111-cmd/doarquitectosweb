    <script>
        var planes = [
            {nombre: "Casa Compacta", tam: "80m²", hab: 2, ban: 1, precio: "$299", desc: "Diseño eficiente perfecto para parejas jóvenes o pequeñas familias. Maximiza cada metro cuadrado con inteligencia.", caract: ["Cocina integrada", "Sala-comedor", "Patio trasero", "Estacionamiento"]},
            {nombre: "Casa Familiar", tam: "120m²", hab: 3, ban: 2, precio: "$449", desc: "Espacios amplios y funcionales para el confort familiar. Diseño contemporáneo con excelente distribución.", caract: ["Cocina independiente", "Sala y comedor", "Jardín", "2 Estacionamientos"]},
            {nombre: "Casa Moderna", tam: "150m²", hab: 3, ban: 2.5, precio: "$599", desc: "Arquitectura vanguardista con líneas limpias. Perfecta integración entre espacios interiores y exteriores.", caract: ["Cocina gourmet", "Sala de estar", "Terraza", "Estudio", "2 Estacionamientos"]},
            {nombre: "Casa Ejecutiva", tam: "200m²", hab: 4, ban: 3, precio: "$799", desc: "Elegancia y funcionalidad en cada detalle. Diseñada para quienes buscan espacios amplios y sofisticados.", caract: ["Cocina isla", "Sala doble altura", "Terraza techada", "Walk-in closet", "3 Estacionamientos"]},
            {nombre: "Casa Premium", tam: "250m²", hab: 4, ban: 3.5, precio: "$999", desc: "Lujo y confort sin compromisos. Espacios generosos con acabados de primera calidad en su diseño.", caract: ["Cocina gourmet", "Sala de TV", "Quincho", "Suite principal", "Piscina", "3 Estacionamientos"]},
            {nombre: "Casa de Ensueño", tam: "320m²", hab: 5, ban: 4, precio: "$1,299", desc: "La máxima expresión de diseño arquitectónico. Ideal para familias que buscan exclusividad y amplitud total.", caract: ["2 Cocinas", "Home theater", "Gimnasio", "Bodega vinos", "Piscina grande", "4 Estacionamientos"]}
        ];

        function openModal(id) {
            var p = planes[id-1];
            var modal = document.getElementById('modal');
            var caractHTML = '';
            for(var i = 0; i < p.caract.length; i++) {
                caractHTML += '<div class="flex items-center"><svg class="h-5 w-5 text-green-500 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg><span>' + p.caract[i] + '</span></div>';
            }
            modal.innerHTML = '<div class="bg-white rounded-lg max-w-2xl w-full p-8" onclick="event.stopPropagation()"><h2 class="text-3xl font-bold mb-4">' + p.nombre + '</h2><div class="flex items-center space-x-4 mb-4 text-sm md:text-base flex-wrap"><span class="text-xl font-semibold text-blue-600">' + p.tam + '</span><span>•</span><span>' + p.hab + ' habitaciones</span><span>•</span><span>' + p.ban + ' baños</span></div><p class="text-gray-600 mb-6">' + p.desc + '</p><h3 class="font-semibold mb-3">Características incluidas:</h3><div class="grid md:grid-cols-2 gap-2 mb-6">' + caractHTML + '</div><div class="flex flex-col sm:flex-row items-center justify-between border-t pt-6 gap-4"><span class="text-4xl font-bold text-blue-600">' + p.precio + '</span><div class="flex gap-4"><button onclick="closeModal()" class="px-6 py-2 border border-gray-300 rounded-full hover:bg-gray-50 transition">Cerrar</button><button class="bg-blue-600 text-white px-8 py-2 rounded-full hover:bg-blue-700 transition font-semibold">Comprar</button></div></div></div>';
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            modal.onclick = closeModal;
        }

        function closeModal() {
            var modal = document.getElementById('modal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
        }
    </script>
